@prefix bg: <https://w3id.org/FAIR-course-UT/2025-2026/group6/ont#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .

@prefix ex: <https://w3id.org/FAIR-course-UT/2024-2025/group1/shapes#> .

ex:DatasetShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path dct:title ],
        [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:description ],
        [ sh:minCount 1 ;
            sh:path dct:creator ],
        [ sh:minCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path dct:license ],
        [ sh:class dcat:Distribution ;
            sh:minCount 2 ;
            sh:path dcat:distribution ] ;
    sh:targetClass dcat:Dataset .

ex:OriginalDistributionShape a sh:NodeShape ;
    sh:property [ sh:minCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path dcat:downloadURL ],
        [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:title ],
        [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:description ],
        [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:format ],
        [ sh:minCount 1 ;
            sh:path dcat:mediaType ] ;
    sh:targetClass dcat:Distribution .

ex:RdfDistributionShape a sh:NodeShape ;
    sh:property [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:title ],
        [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:description ],
        [ sh:datatype xsd:string ;
            sh:minCount 1 ;
            sh:path dct:format ],
        [ sh:minCount 1 ;
            sh:path dcat:mediaType ],
        [ sh:minCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path dct:conformsTo ],
        [ sh:minCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path dcat:downloadURL ] ;
    sh:targetClass dcat:Distribution .

